extends base.pug
block scripts
  script(src='/index.js')

block style
    style
        include ../static/style.css
        include ../static/styleContact.css

block content
    
    
    div.container
        h1 Contact Us
        form(action="/contact", method= "post", class= "myForm")
            <input type="text"class= "myInput" name="name" placeholder="Enter your name..">
            <input type="phone" class= "myInput" name="phone" placeholder="Enter your phone..">
            <input type="email" class= "myInput" name="email" placeholder="Enter your email..">
            <input type="text" class="myInput" name="gender" placeholder="Your gender..">
            <input type="text" class="myInput" name="address" placeholder="Your address">
            <input type="text" class="myInput" name="query" placeholder="Enter your query">
            <button class="button" >Submit</button>
            
